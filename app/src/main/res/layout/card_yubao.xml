<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="9dp"
    android:paddingRight="9dp"
    android:paddingBottom="16dp"
    android:id="@+id/card_yubao"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/first"
                        android:text="今天"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/first_day_weather_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        />

                    <TextView
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/first_day_weather_txt"
                        android:text="N/A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:textSize="17sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/first_day_max_min_temp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:paddingLeft="50dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/second"
                        android:text="明天"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/second_day_weather_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        />

                    <TextView android:textColor="@color/white"

                        android:id="@+id/second_day_weather_txt"
                        android:text="N/A"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:textSize="17sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/second_day_max_min_temp"
                        />
                </LinearLayout>


                <LinearLayout
                    android:paddingLeft="50dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/third"
                        android:text="后天"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/third_day_weather_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        />

                    <TextView
                        android:textColor="@color/white"
                        android:id="@+id/third_day_weather_txt"
                        android:text="N/A"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:textSize="17sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/third_day_max_min_temp"
                        />
                </LinearLayout>


                <LinearLayout
                    android:paddingLeft="50dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/four"
                        android:text="大后天"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/four_day_weather_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        />

                    <TextView
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/four_day_weather_txt"
                        android:text="N/A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:textSize="17sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/four_day_max_min_temp"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>






</LinearLayout>