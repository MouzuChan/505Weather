<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
     tools:context="com.example.l.myweather.BlankFragment"
    android:orientation="vertical"
    android:layout_height="match_parent">



    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/refresh"
        android:layout_weight="1"
        android:layout_height="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <include layout="@layout/card_shikuang"/>
                <include layout="@layout/card_yubao"/>
                <include layout="@layout/card_life"/>
                <include layout="@layout/card_qita"/>





            </LinearLayout>

        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

    <TextView
        android:text="更新时间"
        android:id="@+id/view_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom" />




</LinearLayout>
